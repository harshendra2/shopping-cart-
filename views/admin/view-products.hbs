<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">add product</a>

        </div>
    <table class="table" id="productstable">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Title</th>
      <th scope="col">Categary</th>
      <th scope="col">Description</th>
      <th>image</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each chart}}
  
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.categary}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/"{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm("Are you want to delete{{this.Name}}?")">Delete</a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>
    <script>
      $(function (){
        $('#productstable').DataTable();
       });
</script>