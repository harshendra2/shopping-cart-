<div class="container">
    
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Status</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <a href="/view-order-product/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                

            </table>

        </div>
    </div>
</div>